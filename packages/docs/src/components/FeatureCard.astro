---
import { Icon } from "@astrojs/starlight/components";

const { title, icon, badgeText } = Astro.props;
---

<div
  class="group relative overflow-hidden rounded-xl border border-gray-200 bg-white p-6 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:border-gray-300 hover:shadow-lg dark:border-gray-700 dark:bg-gray-800 dark:shadow-lg dark:hover:border-gray-600 dark:hover:shadow-2xl"
>
  <div class="relative z-10 flex h-full flex-col">
    <div class="mb-2 flex items-start gap-3">
      <div
        class="flex h-12 w-12 items-center justify-center rounded-xl border border-gray-200 bg-gray-50 dark:border-gray-600 dark:bg-gray-700"
      >
        <Icon
          name={icon}
          size="1.5rem"
          class="text-gray-700 dark:text-gray-200"
        />
      </div>
      <h3
        class="mt-3 text-xl leading-tight font-bold text-gray-900 dark:text-gray-100"
      >
        {title}
      </h3>
    </div>

    <div
      class="inline-block self-start rounded bg-gray-100 px-2 py-1 text-xs font-medium tracking-wider text-gray-600 uppercase dark:bg-gray-700 dark:text-gray-400"
    >
      {badgeText}
    </div>

    <div class="flex-1 text-gray-600 dark:text-gray-300">
      <slot />
    </div>
  </div>

  <div
    class="absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
  >
    <div
      class="absolute inset-0 bg-gradient-to-br from-transparent to-gray-50/50 dark:to-gray-700/50"
    >
    </div>
  </div>
</div>
