---
import Default from "@astrojs/starlight/components/SiteTitle.astro";
import { getBaseUrl } from "../lib/url";
---

<div class="custom-site-title-wrapper">
  <div class="default-site-title">
    <Default {...Astro.props}><slot /></Default>
  </div>

  <a href={getBaseUrl()} class="custom-site-title-link">
    <div class="custom-site-title">
      <span class="site-title-text">
        <span class="gitlab-text">GitLab</span>
        <span class="graph-text">Knowledge Graph</span>
      </span>
    </div>
  </a>
</div>

<style>
  .custom-site-title-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  /* Hide the default title text, keep only the logo */
  .default-site-title :global(a) {
    display: flex !important;
    align-items: center !important;
    gap: 0.75rem !important;
    text-decoration: none !important;
  }

  .default-site-title :global(span) {
    display: none !important;
  }

  .default-site-title :global(img) {
    height: 2.5rem !important;
    width: auto !important;
  }

  .custom-site-title-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
  }

  .custom-site-title-link:hover {
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .custom-site-title {
    display: flex;
    align-items: center;
  }

  .site-title-text {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: 0.3rem;
    font-weight: 600;
    font-size: 1.25rem;
    line-height: 1.2;
    white-space: nowrap;
  }

  /* Responsive adjustments for smaller screens */
  @media (max-width: 768px) {
    .site-title-text {
      font-size: 1.1rem;
      gap: 0.25rem;
    }

    .default-site-title :global(img) {
      height: 2.25rem !important;
    }
  }

  @media (max-width: 480px) {
    .site-title-text {
      font-size: 1rem;
      gap: 0.2rem;
    }

    .default-site-title :global(img) {
      height: 2rem !important;
    }
  }
</style>
