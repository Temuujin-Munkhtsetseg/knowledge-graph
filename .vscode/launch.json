{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug gkg index",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build gkg",
            "program": "${workspaceFolder}/target/debug/gkg",
            "env": {
                "RUST_BACKTRACE": "short"
            },
            "args": ["index", "~/gitlab-development-kit/gitlab"],
            "sourceMap": {},
            "sourceLanguages": [
                "rust"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug server",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build gkg",
            "program": "${workspaceFolder}/target/debug/gkg",
            "env": {
                "RUST_BACKTRACE": "short"
            },
            "args": ["server", "start"],
            "sourceMap": {},
            "sourceLanguages": [
                "rust"
            ]
        },
    ]
}
