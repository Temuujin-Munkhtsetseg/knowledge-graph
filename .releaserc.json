{
  "branches": "main",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "test",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "ci",
            "release": "patch"
          },
          {
            "type": "build",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": "patch"
          },
          {
            "type": "no-release",
            "release": false
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "writerOpts": {
          "commitPartial": "* {{#if scope}}**{{scope}}:** {{/if}}{{subject}}{{#if hash}} ([{{shortHash}}]({{@root.host}}/{{@root.owner}}/{{@root.repository}}/commit/{{hash}})){{/if}}{{#if author.name}} by {{author.name}}{{/if}}\n"
        },
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": ":sparkles: Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": ":bug: Fixes",
              "hidden": false
            },
            {
              "type": "docs",
              "section": ":memo: Documentation",
              "hidden": false
            },
            {
              "type": "style",
              "section": ":barber: Code-style",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": ":zap: Refactor",
              "hidden": false
            },
            {
              "type": "perf",
              "section": ":fast_forward: Performance",
              "hidden": false
            },
            {
              "type": "test",
              "section": ":white_check_mark: Tests",
              "hidden": false
            },
            {
              "type": "ci",
              "section": ":repeat: CI",
              "hidden": false
            },
            {
              "type": "chore",
              "section": ":repeat: Chore",
              "hidden": false
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyReleaseCmd": "echo ${nextRelease.version} > .VERSION",
        "prepareCmd": "./scripts/semantic-release-prepare.sh ${nextRelease.version}",
        "successCmd": "./scripts/semantic-release-finish.sh ${nextRelease.gitTag}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md",
          "Cargo.toml",
          "Cargo.lock",
          "crates/*/Cargo.toml",
          "bindings/go/cmd/download/main.go"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/gitlab",
      {
        "assets": [
          { "path": "gkg-linux-aarch64.tar.gz", "type": "package", "target": "generic_package", "filepath": "/gkg-linux-aarch64.tar.gz", "label": "gkg-linux-aarch64.tar.gz"},
          { "path": "gkg-linux-aarch64.tar.gz.sha256", "type": "other", "target": "generic_package", "filepath": "/gkg-linux-aarch64.tar.gz.sha256", "label": "gkg-linux-aarch64.tar.gz.sha256"},
          { "path": "gkg-linux-x86_64.tar.gz", "type": "package", "target": "generic_package", "filepath": "/gkg-linux-x86_64.tar.gz", "label": "gkg-linux-x86_64.tar.gz"},
          { "path": "gkg-linux-x86_64.tar.gz.sha256", "type": "other", "target": "generic_package", "filepath": "/gkg-linux-x86_64.tar.gz.sha256", "label": "gkg-linux-x86_64.tar.gz.sha256"},
          { "path": "gkg-darwin-aarch64.tar.gz", "type": "package", "target": "generic_package", "filepath": "/gkg-darwin-aarch64.tar.gz", "label": "gkg-darwin-aarch64.tar.gz"},
          { "path": "gkg-darwin-aarch64.tar.gz.sha256", "type": "other", "target": "generic_package", "filepath": "/gkg-darwin-aarch64.tar.gz.sha256", "label": "gkg-darwin-aarch64.tar.gz.sha256"},
          { "path": "gkg-darwin-x86_64.tar.gz", "type": "package", "target": "generic_package", "filepath": "/gkg-darwin-x86_64.tar.gz", "label": "gkg-darwin-x86_64.tar.gz"},
          { "path": "gkg-darwin-x86_64.tar.gz.sha256", "type": "other", "target": "generic_package", "filepath": "/gkg-darwin-x86_64.tar.gz.sha256", "label": "gkg-darwin-x86_64.tar.gz.sha256"},
          { "path": "gkg-windows-x86_64.tar.gz", "type": "package", "target": "generic_package", "filepath": "/gkg-windows-x86_64.tar.gz", "label": "gkg-windows-x86_64.tar.gz"},
          { "path": "gkg-windows-x86_64.tar.gz.sha256", "type": "other", "target": "generic_package", "filepath": "/gkg-windows-x86_64.tar.gz.sha256", "label": "gkg-windows-x86_64.tar.gz.sha256"},
          { "path": "lib/linux_amd64/libindexer_c_bindings.tar.gz", "type": "package", "target": "generic_package", "filepath": "/libindexer_c_bindings-linux-amd64.tar.gz", "label": "libindexer_c_bindings-linux-amd64.tar.gz"},
          { "path": "lib/linux_amd64/libindexer_c_bindings.tar.gz.sha256", "type": "other", "target": "generic_package", "filepath": "/libindexer_c_bindings-linux-amd64.tar.gz.sha256", "label": "libindexer_c_bindings-linux-amd64.tar.gz.sha256"},
          { "path": "lib/linux_arm64/libindexer_c_bindings.tar.gz", "type": "package", "target": "generic_package", "filepath": "/libindexer_c_bindings-linux-arm64.tar.gz", "label": "libindexer_c_bindings-linux-arm64.tar.gz"},
          { "path": "lib/linux_arm64/libindexer_c_bindings.tar.gz.sha256", "type": "other", "target": "generic_package", "filepath": "/libindexer_c_bindings-linux-arm64.tar.gz.sha256", "label": "libindexer_c_bindings-linux-arm64.tar.gz.sha256"},
          { "path": "lib/darwin_amd64/libindexer_c_bindings.tar.gz", "type": "package", "target": "generic_package", "filepath": "/libindexer_c_bindings-darwin-amd64.tar.gz", "label": "libindexer_c_bindings-darwin-amd64.tar.gz"},
          { "path": "lib/darwin_amd64/libindexer_c_bindings.tar.gz.sha256", "type": "other", "target": "generic_package", "filepath": "/libindexer_c_bindings-darwin-amd64.tar.gz.sha256", "label": "libindexer_c_bindings-darwin-amd64.tar.gz.sha256"},
          { "path": "lib/darwin_arm64/libindexer_c_bindings.tar.gz", "type": "package", "target": "generic_package", "filepath": "/libindexer_c_bindings-darwin-arm64.tar.gz", "label": "libindexer_c_bindings-darwin-arm64.tar.gz"},
          { "path": "lib/darwin_arm64/libindexer_c_bindings.tar.gz.sha256", "type": "other", "target": "generic_package", "filepath": "/libindexer_c_bindings-darwin-arm64.tar.gz.sha256", "label": "libindexer_c_bindings-darwin-arm64.tar.gz.sha256"}
        ]
      }
    ],
    [
      "semantic-release-slack-bot",
      {
        "notifyOnSuccess": false,
        "notifyOnFail": false,
        "markdownReleaseNotes": true,
        "slackWebhookEnVar": "SLACK_WEBHOOK",
        "branchesConfig": [
          {
            "pattern": "main",
            "notifyOnSuccess": true,
            "notifyOnFail": true
          }
        ],
        "onSuccessTemplate": {
          "text": "ðŸš€ New version of $package_name released: $npm_package_version ðŸš€ \n\n$release_notes"
        }
      }
    ]
  ]
}
